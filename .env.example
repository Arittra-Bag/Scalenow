# LinkedIn Knowledge Management System Configuration

# Required: Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_RATE_LIMIT_RPM=15
GEMINI_RATE_LIMIT_RPD=1500
GEMINI_MAX_TOKENS_PER_DAY=1000000

# Storage Configuration
KNOWLEDGE_REPO_PATH=./knowledge_repository
CACHE_DB_PATH=./cache/knowledge_cache.db
MAX_CACHE_SIZE_MB=100

# Scraping Configuration
SCRAPING_DELAY_SECONDS=2.0
MAX_RETRIES=3
REQUEST_TIMEOUT_SECONDS=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Processing Configuration
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5
ENABLE_IMAGE_DOWNLOAD=true
MAX_IMAGE_SIZE_MB=10

# File Management
EXCEL_FILENAME_TEMPLATE=Knowledge_Resources_v{version}.xlsx
WORD_FILENAME_TEMPLATE=Knowledge_Resources_v{version}.docx
ENABLE_VERSION_CONTROL=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/linkedin_kms.log
ENABLE_FILE_LOGGING=true
MAX_LOG_FILE_SIZE_MB=10

# Security Configuration
ENABLE_PII_DETECTION=true
SANITIZE_CONTENT=true