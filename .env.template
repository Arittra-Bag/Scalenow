# LinkedIn Knowledge Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Gemini AI API Configuration (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_RATE_LIMIT_RPM=15
GEMINI_RATE_LIMIT_RPD=1500
GEMINI_MAX_TOKENS_PER_DAY=1000000

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Knowledge Repository Settings
KNOWLEDGE_REPO_PATH=./knowledge_repository
CACHE_DB_PATH=./cache/knowledge_cache.db
MAX_CACHE_SIZE_MB=100

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

# Web Scraping Settings
SCRAPING_DELAY_SECONDS=2.0
MAX_RETRIES=3
REQUEST_TIMEOUT_SECONDS=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Batch Processing Settings
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5
ENABLE_IMAGE_DOWNLOAD=true
MAX_IMAGE_SIZE_MB=10

# =============================================================================
# FILE MANAGEMENT
# =============================================================================

# Export File Templates
EXCEL_FILENAME_TEMPLATE=Knowledge_Resources_v{version}.xlsx
WORD_FILENAME_TEMPLATE=Knowledge_Resources_v{version}.docx
ENABLE_VERSION_CONTROL=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/linkedin_kms.log
ENABLE_FILE_LOGGING=true
MAX_LOG_FILE_SIZE_MB=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Privacy and Security Settings
ENABLE_PII_DETECTION=true
SANITIZE_CONTENT=true
ENABLE_CONTENT_ENCRYPTION=false
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting for Web API
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Authentication (if enabled)
ENABLE_API_AUTHENTICATION=false
API_SECRET_KEY=your_secret_key_here
JWT_EXPIRATION_HOURS=24

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# FastAPI Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=false
SERVER_DEBUG=false

# CORS Settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Settings (for caching)
DB_CONNECTION_TIMEOUT=30
DB_MAX_CONNECTIONS=10
DB_ENABLE_WAL_MODE=true

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Monitoring Settings
ENABLE_METRICS_COLLECTION=true
METRICS_EXPORT_INTERVAL_SECONDS=60

# Alert Settings (optional)
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_TO=admin@yourcompany.com

# Webhook Alerts (optional)
ENABLE_WEBHOOK_ALERTS=false
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode Settings
DEVELOPMENT_MODE=false
ENABLE_DEBUG_LOGGING=false
MOCK_API_RESPONSES=false

# Testing Settings
ENABLE_TEST_MODE=false
TEST_DATA_PATH=./test_data

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment Type
ENVIRONMENT=development
# Options: development, staging, production

# Health Check Settings
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=5

# Backup Settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups